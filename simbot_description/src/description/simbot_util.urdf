<?xml version="1.0"?>
<robot name="simbot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define intertial property macros  -->
  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0.0" ixz="0.0" iyy="${(m/12) * (w*w + d*d)}" iyz="0.0" izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy = "0" ixz = "0" iyy="${(m/12) * (3*r*r + h*h)}" iyz = "0" izz="${(m/2) * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="sphere_inertia" params="m r">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${(2/5) * m * (r*r)}" ixy="0.0" ixz="0.0" iyy="${(2/5) * m * (r*r)}" iyz="0.0" izz="${(2/5) * m * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertia m="0.25" r="${wheel_radius}" h="${wheel_width}"/>
    </link>

    <joint name="${prefix}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*(wheel_yoff)} 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <dynamics friction="0.5" damping="0.1" />
    </joint>
  </xacro:macro>

  <!-- depth camera -->
  <xacro:macro name="rgbd_cam" params="name x z th">
    <link name="cam_${name}_link">

      <visual>
        <origin xyz="0 0 ${0.025/2}" rpy="0 0 0"/>
        <geometry>
            <box size="0.03 0.10 0.025"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 ${0.025/2}" rpy="0 0 0"/>
        <geometry>
          <box size="0.03 0.10 0.025"/>
        </geometry>
      </collision>

      <xacro:box_inertia m="0.1" w="0.100" h="0.025" d="0.03"/>

    </link>

    <joint name="cam_${name}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="cam_${name}_link"/>
      <origin xyz="${x} 0.0 ${z}" rpy="0 ${-th} 0"/>
    </joint>

    <link name="cam_${name}_rgb_frame"/>
    <joint name="cam_${name}_rgb_joint" type="fixed">
      <parent link="cam_${name}_link"/>
      <child link="cam_${name}_rgb_frame"/>
      <origin xyz="0 0.02 ${0.025/2}" rpy="0 0 0"/>
    </joint>

    <link name="cam_${name}_rgb_optical_frame"/>
    <joint name="cam_${name}_rgb_optical_joint" type="fixed">
      <parent link="cam_${name}_rgb_frame"/>
      <child link="cam_${name}_rgb_optical_frame"/>
      <origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
    </joint>

    <link name="cam_${name}_depth_frame"/>
    <joint name="cam_${name}_depth_joint" type="fixed">
      <parent link="cam_${name}_link"/>
      <child link="cam_${name}_depth_frame"/>
      <origin xyz="0 -0.02 ${0.025/2}" rpy="0 0 0"/>
    </joint>

    <link name="cam_${name}_depth_optical_frame"/>
    <joint name="cam_${name}_depth_optical_joint" type="fixed">
      <parent link="cam_${name}_depth_frame"/>
      <child link="cam_${name}_depth_optical_frame"/>
      <origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
    </joint>
  </xacro:macro>

</robot>
